# Backend
PORT=8080
MONGO_URI=mongodb://root:example@mongo:27017
MONGO_DB=fleet
JWT_SECRET=dev-secret-change-me
TELEMETRY_TTL_DAYS=30
WEBSOCKETS_ENABLED=true

# MQTT (inside Docker use mosquitto; on host use tcp://localhost:1883)
MQTT_BROKER_URL=tcp://mosquitto:1883
MQTT_TELEMETRY_TOPIC=fleet/telemetry
MQTT_USERNAME=
MQTT_PASSWORD=

# TLS (optional)
USE_HTTPS=false
TLS_CERT_FILE=
TLS_KEY_FILE=

# OSRM routing (optional)
OSRM_BASE_URL=https://router.project-osrm.org

# Frontend (dev)
REACT_APP_API_URL=http://localhost:8081
REACT_APP_SSE_URL=http://localhost:8081/api/telemetry/stream
REACT_APP_WS_URL=ws://localhost:8081/api/telemetry/ws

# Simulator (dev)
SIM_USE_MQTT=1
FLEET_SIZE=10
SIM_TICK_SECONDS=2
